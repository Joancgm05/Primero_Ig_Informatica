# @author Joan Carlos García Méndez
# @date
# @brief A Makefile for the execition of the program concatenation.
#

CXX = g++ 
CXXFLAGS = -std=c++17 -Wall 
LDFLAGS = 

all: concatenation

concatenation: concatenation.o
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LDFLAGS)

.PHONY: all clean

	$(CXX) $(CXXFLAGS) -c $<

clean :
	rm -rf *.o
	rm -rf concatenation
 
