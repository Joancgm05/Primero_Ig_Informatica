    "editor.scrollbar.vertical": "hidden",
    "editor.guides.indentation": false,
    "indenticator.width": 0.01,
    "indenticator.inner.width": 0.01,
    "indenticator.color.dark": "rgba(255,255,255,0.1)",
    "editor.glyphMargin": false
